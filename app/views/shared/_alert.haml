.app-message
  - if alert
    %div{:class => "alert alert-error fade in"}
      %a{:class => "close",
         "data-dismiss" => "alert",
         :href => "#"}
        &times;
      = alert
  
  - if notice 
    %div{:class => "alert alert-success fade in"}
      %button{:class => "close",
              "data-dismiss" => "alert"}
        x
      = notice
  
