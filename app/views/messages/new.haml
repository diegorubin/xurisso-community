- content_for :menu do
  = render :partial => "users/menu-show"

- content_for(:page) do
  -content_for :title, "Enviar mensagem"

  %h1
    Enviar Mensagem

  = form_for([@user,@message]) do |f|

    = f.label :about
    = f.text_field :about
    = show_message_if_error(@message, :about)

    = f.label :body
    = f.text_area :body
    = show_message_if_error(@message, :body)

    .clearfix
      = f.submit "Enviar", :class => "btn btn-primary"

= render :partial => "shared/header"

