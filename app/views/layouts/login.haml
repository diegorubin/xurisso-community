%html
  %head
    %title= "#{yield :title} - Xurisso Community"
    = csrf_meta_tag 

    /[if lt IE 9]
      = javascript_include_tag 'http://html5shim.googlecode.com/svn/trunk/html5.js'

    = stylesheet_link_tag :login, :media => 'all'

  %body

    .container-login
      .content

        .row-fluid
          .span8
            - if alert
              %div{:class => "alert alert-error fade in"}
                %a{:class => "close",
                   "data-dismiss" => "alert",
                   :href => "#"}
                  &times;
                = alert

            - if notice 
              %div{:class => "alert success fade in"}
                %button{:class => "close",
                        "data-dismiss" => "alert"}
                  x
                = notice

          .span4
            #login-form.well
              = yield

      %footer
        %p
          Desenvolvido por #{link_to "Diego Rubin", "http://diegorubin.com"}

  = yield :javascript 

