= form_for [:admin, @user] do |f|

  = f.label :name
  = f.text_field :name
  = show_message_if_error(@user, :name)

  = f.label :email
  = f.text_field :email
  = show_message_if_error(@user, :email)

  - if @user.new_record?
    = f.label :login
    = f.text_field :login
    = show_message_if_error(@user, :login)

    = f.label :password
    = f.password_field :password
    = show_message_if_error(@user, :password)

    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = show_message_if_error(@user, :password_confiramtion)

  = f.label :admin
  = f.check_box :admin
  = show_message_if_error(@user, :admin)

  = f.label :blocked
  = f.check_box :blocked
  = show_message_if_error(@user, :blocked)

  .clearfix
    = f.submit "Salvar", :class => "btn btn-primary"

- unless @user.new_record?
  %h2
    Alterar Senha

  = form_for [:admin, @user] do |f|
    = f.label :password
    = f.password_field :password
    = show_message_if_error(@user, :password)


    = f.label :password_confirmation
    = f.password_field :password_confirmation
    = show_message_if_error(@user, :password_confirmation)

    .clearfix
      = f.submit "Atualizar Senha", :class => "btn btn-primary"

